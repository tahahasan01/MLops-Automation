pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/tahahasan01/i211767_i211695.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t mymlapp .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker tag mymlapp tahahasan01/mymlapp:latest'
                    sh 'docker push tahahasan01/mymlapp:latest'
                }
            }
        }

        stage('Notify Admin') {
            steps {
                mail to: 'tahahasan270@gmail.com',
                     subject: 'Deployment Successful',
                     body: 'The ML application has been deployed successfully.'
            }
        }
    }
}
